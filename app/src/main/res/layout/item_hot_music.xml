<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_hot_music_album_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:src="#666666"/>
        <TextView
            android:id="@+id/tv_hotMusic_songName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/iv_hot_music_album_pic"
            android:layout_toEndOf="@+id/iv_hot_music_album_pic"
            android:layout_toRightOf="@+id/iv_hot_music_album_pic"
            android:text="K歌之王 "
            android:textColor="#000"
            android:textSize="16sp"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/tv_hotMusic_singerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="陈奕迅"
            android:textColor="#000"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_hotMusic_songName"
            android:layout_alignStart="@+id/tv_hotMusic_songName" />

        <ImageView
            android:id="@+id/hot_music_download"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/download"
            android:layout_below="@+id/hot_music_play"
            android:layout_alignLeft="@+id/tv_hotMusic_singerName"
            android:layout_alignStart="@+id/tv_hotMusic_singerName" />
        <ImageView
            android:id="@+id/hot_music_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/play"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>