<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
    <include layout="@layout/activity_main_pivture_viewpager"
        android:id="@+id/include">

    </include>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:id="@+id/view"
        card_view:cardCornerRadius="2dp"
        >

    <RelativeLayout
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_hot_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mainactivity_hot_music"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_alignTop="@+id/button_list_music"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/button_list_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainactivity_list_music"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/button_recent_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mainactivity_recent_music"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_above="@+id/tv_list_music"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_recent_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  最近"
            android:layout_above="@+id/button_favorite_music"
            android:layout_alignLeft="@+id/button_recent_music"
            android:layout_alignStart="@+id/button_recent_music" />

        <TextView
            android:id="@+id/tv_list_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表"
            android:layout_alignTop="@+id/tv_hot_music"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_hot_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热歌 "
            android:layout_below="@+id/button_hot_music"
            android:layout_alignRight="@+id/button_hot_music"
            android:layout_alignEnd="@+id/button_hot_music" />

        <Button
            android:id="@+id/button_favorite_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mainactivity_favorite_music"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/tv_hot_music"
            android:layout_alignRight="@+id/tv_hot_music"
            android:layout_alignEnd="@+id/tv_hot_music" />
        <TextView
            android:id="@+id/tv_favorite_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我喜欢"
            android:layout_below="@+id/button_favorite_music"
            android:layout_alignRight="@+id/button_favorite_music"
            android:layout_alignEnd="@+id/button_favorite_music"></TextView>
        <Button
            android:id="@+id/button_local_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mainactivity_local_music"
            android:layout_above="@+id/tv_local_music"
            android:layout_centerHorizontal="true"></Button>
        <TextView
            android:id="@+id/tv_local_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地"
            android:layout_alignTop="@+id/tv_favorite_music"
            android:layout_alignLeft="@+id/tv_list_music"
            android:layout_alignStart="@+id/tv_list_music" />
        <Button
            android:id="@+id/button_download_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mainactivity_download_music"
            android:layout_alignTop="@+id/button_local_music"
            android:layout_alignLeft="@+id/button_recent_music"
            android:layout_alignStart="@+id/button_recent_music" />
        <TextView
            android:id="@+id/tv_download_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 下载"
            android:layout_below="@+id/button_download_music"
            android:layout_alignLeft="@+id/button_download_music"
            android:layout_alignStart="@+id/button_download_music" />

    </RelativeLayout>


    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/mingxinqiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music Star"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/view"
                android:id="@+id/view2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/aa"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/aa"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/bb"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:src="@drawable/bb"
                         />

                    <ImageView
                        android:id="@+id/cc"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/cc"
                        android:layout_weight="1"
                         />


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
