                        <!--/>-->


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#3498db"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    >

                    <!--<ImageView-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="120dp"-->
                        <!--android:src="@drawable/ee"-->
                        <!--/>-->
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#9b59b6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp"
                    >
                    <!--<ImageView-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="120dp"-->
                        <!--android:src="@drawable/ff"-->
                        <!--android:layout_gravity="top"-->
                        <!--/>-->

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#27ae60">

                    <!--<ImageView-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="120dp"-->
                        <!--android:src="@drawable/gg"-->
                        <!--/>-->

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#1abc9c"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"

                    >
                    <!--<ImageView-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="120dp"-->
                        <!--android:src="@drawable/kk"-->
                        <!--/>-->

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#e74c3c"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp"
                    >

                    <!--<ImageView-->
                        <!--android:layout_width="120dp"-->
                        <!--android:layout_height="120dp"-->
                        <!--android:src="@drawable/ii"-->
                        <!--/>-->

                </android.support.v7.widget.CardView>
            </LinearLayout>





        </LinearLayout>


    </ScrollView>


</RelativeLayout>
